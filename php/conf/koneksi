<?php 

define('LOCALHOST', 'localhost');
define('DB_USERNAME', 'root');
define('DB_PASSWORD', '');
define('DB_NAME', 'sbd');

$koneksi = mysqli_connect(LOCALHOST, DB_USERNAME, DB_PASSWORD) or die(mysqli_error()); // koneksi database
$db_select = mysqli_select_db($koneksi, DB_NAME) or die(mysqli_error()); //memilih database

?>